<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobilneaplikacije.totvuc.test.CashRegister">

    <TextView
        android:id="@+id/tv_cashreg_dateHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: "
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/tv_cashreg_date"
        android:layout_width="126dp"
        android:layout_height="37dp"
        android:text="N/A"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/tv_cashreg_itemHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Items:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="68dp" />

    <ListView
        android:id="@+id/lv_cashreg_items"
        android:layout_width="match_parent"
        android:layout_height="263dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tv_cashreg_totalHeasder"
        android:layout_width="102dp"
        android:layout_height="48dp"
        android:text="Total:"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="378dp" />

    <TextView
        android:id="@+id/tv_cashreg_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0,00"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="393dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="461dp">

        <Button
            android:id="@+id/btn_cashreg_add3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ ADD"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="446dp" />

        <Button
            android:id="@+id/btn_cashreg_confirm3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIRM"
            tools:layout_editor_absoluteX="122dp"
            tools:layout_editor_absoluteY="447dp" />

        <Button
            android:id="@+id/btn_cashreg_cancel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            tools:layout_editor_absoluteX="232dp"
            tools:layout_editor_absoluteY="447dp" />
    </TableRow>

</android.support.constraint.ConstraintLayout>
